<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:layout_marginHorizontal="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/thumbnail_upload_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_corner1_nstrike_nborder"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/remove_upload_img"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/remove_item"
        android:alpha="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintCircle="@id/thumbnail_upload_img"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="40dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>