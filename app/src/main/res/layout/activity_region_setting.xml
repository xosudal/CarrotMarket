<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".setting.activity.RegionSettingActivity">

    <include
        android:id="@+id/region_setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/region_setting_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/region_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/region_frame_layout"
                android:max="3"/>


            <FrameLayout
                android:id="@+id/region_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/region_seek_bar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_region_4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/bg_region_image"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/iv_region_3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/bg_region_image"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/iv_region_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bg_region_image"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/iv_region_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bg_region_image"
                    android:layout_gravity="center"/>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>